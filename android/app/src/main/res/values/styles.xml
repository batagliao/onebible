<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

    </style>

    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
    </style>

    <style name="MainMenuItemContainer">
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="MainMenuTextAppearance">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">27sp</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textColor">@color/primary_text_default_material_light</item>
    </style>

    <style name="MainMenuSubTextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/secondary_text_material_light</item>
    </style>

    <style name="VerseOfTheDayAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/primary_text_default_material_dark</item>
    </style>

    <style name="VerseOfTheDayAppearance.Address">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/secondary_text_material_dark</item>
    </style>

    <style name="ExpandedTextAppearance">
        <item name="android:textColor">@color/transparent</item>
    </style>

    <style name="NoActionBarTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="NoActionBarTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>

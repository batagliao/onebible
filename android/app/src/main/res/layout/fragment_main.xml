<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_height="match_parent"
    android:layout_width="match_parent">

    <!-- Your Scrollable View -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                style="@style/MainMenuItemContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/main_startreading"
                    android:textAppearance="@style/MainMenuTextAppearance"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Genesis 1"
                    android:textAppearance="@style/MainMenuSubTextAppearance"/>
            </LinearLayout>
            <LinearLayout
                style="@style/MainMenuItemContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/main_books"
                    android:textAppearance="@style/MainMenuTextAppearance"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Almeida Corrigida Fiel"
                    android:textAppearance="@style/MainMenuSubTextAppearance"/>
            </LinearLayout>
            <LinearLayout
                style="@style/MainMenuItemContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/main_bookmarks"
                    android:textAppearance="@style/MainMenuTextAppearance"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="50 bookmarks"
                    android:textAppearance="@style/MainMenuSubTextAppearance"/>
            </LinearLayout>
            <LinearLayout
                style="@style/MainMenuItemContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/main_search"
                    android:textAppearance="@style/MainMenuTextAppearance"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/main_search_detail"
                    android:textAppearance="@style/MainMenuSubTextAppearance"/>
            </LinearLayout>
            <LinearLayout
                style="@style/MainMenuItemContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/main_settings"
                    android:textAppearance="@style/MainMenuTextAppearance"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/main_settings_detail"
                    android:textAppearance="@style/MainMenuSubTextAppearance"/>
            </LinearLayout>
            <LinearLayout
                style="@style/MainMenuItemContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/main_about"
                    android:textAppearance="@style/MainMenuTextAppearance"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/main_about_details"
                    android:textAppearance="@style/MainMenuSubTextAppearance"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|enterAlways"
            />

    </android.support.design.widget.AppBarLayout>

</android.support.design.widget.CoordinatorLayout>
